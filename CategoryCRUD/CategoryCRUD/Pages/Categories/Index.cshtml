@page
@model CategoryCRUD.Pages.Categories.IndexModel

<h2>Список категорий</h2>

<a asp-page="Create" class="btn btn-primary">Создать категорию</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
