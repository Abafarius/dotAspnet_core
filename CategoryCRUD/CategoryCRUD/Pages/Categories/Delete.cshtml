@page
@model CategoryCRUD.Pages.Categories.DeleteModel
<h2>Вы уверены, что хотите удалить категорию?</h2>
<p><strong>@Model.Category.Name</strong></p>

<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-page="Index" class="btn btn-secondary">Отмена</a>
</form>
